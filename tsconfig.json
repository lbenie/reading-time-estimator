{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["ES2021", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strictNullChecks": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "*.spec.ts"]
}
