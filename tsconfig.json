{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "declarationDir": "dist/types"
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
