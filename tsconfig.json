{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
