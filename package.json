{
  "name": "reading-time-estimator",
  "version": "1.3.3",
  "description": "A medium's like reading time estimator with internationalization support",
  "keywords": [
    "typescript",
    "typescript-library",
    "javascript",
    "javascript-library",
    "i18n",
    "reading",
    "reading-time",
    "time",
    "es6",
    "medium",
    "i18n",
    "estimator"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/reading-time-estimator.umd.js",
  "module": "./dist/reading-time-estimator.es.js",
  "exports": {
    ".": {
      "import": "./dist/reading-time-estimator.es.js",
      "require": "./dist/reading-time-estimator.umd.js"
    }
  },
  "types": "dist/types/index.d.ts",
  "bugs": {
    "url": "https://github.com/lbenie/reading-time-estimator/issues"
  },
  "homepage": "https://github.com/lbenie/reading-time-estimator#readme",
  "author": {
    "name": "Lucien Bénié",
    "email": "lucien.benie@gmail.com",
    "url": "https://github.com/lbenie"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lbenie/reading-time-estimator"
  },
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "test": "concurrently -n jest,stryker 'jest --coverage' 'stryker run'",
    "semantic-release": "npx semantic-release",
    "commit": "npx git-cz",
    "docs:dev": "npx vuepress dev vuepress",
    "docs:build": "npx vuepress build vuepress",
    "postinstall": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@commitlint/prompt": "15.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@stryker-mutator/core": "5.5.1",
    "@stryker-mutator/jest-runner": "5.5.1",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.6.0",
    "@vuepress/plugin-google-analytics": "1.8.2",
    "all-contributors-cli": "^6.20.0",
    "commitizen": "4.2.4",
    "concurrently": "6.4.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.4.5",
    "lint-staged": "12.1.2",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "pug": "3.0.2",
    "pug-plain-loader": "1.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "0.31.1",
    "semantic-release": "^18.0.1",
    "ts-jest": "27.1.1",
    "typescript": "4.5.4",
    "vite": "^2.6.14",
    "vue-highlightjs": "1.3.3",
    "vue-wysiwyg": "^1.7.2",
    "vuepress": "1.8.2"
  },
  "engines": {
    "node": ">=10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
